<Window x:Class="WPF_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="#FFFF9C9C">
        <StackPanel Orientation="Horizontal" Margin="8">

            <TextBlock>Surname</TextBlock>
            <ComboBox x:Name="comboPeople" x:FieldModifier="private" Width="120" Margin="8, 0" 
                      ItemsSource="{Binding Path=People}" DisplayMemberPath="Surname"
                      SelectedItem="{Binding Path=SelectedPerson}"></ComboBox>

            <Button Click="Button_Click">Submit</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock x:FieldModifier="private" x:Name="lblGreetings"></TextBlock>
        </StackPanel>
                
        <!--
            <Canvas Height="100" Background="#FFFFB679" Margin="50" Visibility="Collapsed"/>
            <Canvas Height="100" Background="#FFA7D3FF"/>
        -->
       

    </StackPanel>
</Window>
